<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.studio.smartbutler">

    <!--查看LOG-->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:authorities="com.studio.smartbutler.fileprovider"
            android:name="android.support.v4.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>

        <!--主页-->
        <activity android:name=".MainActivity"/>

        <!--设置页-->
        <activity
            android:name=".ui.SettingActivity"
            android:label="@string/text_setting">

        </activity>

        <!--闪屏页-->
        <activity android:name=".ui.SplashActivity"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--引导页-->
        <activity
            android:name=".ui.GuideActivity"
            android:theme="@style/FullScreen"/>

        <!--登陆页-->
        <activity
            android:name=".ui.LoginActivity"
            android:label="登陆"/>

        <!--注册页-->
        <activity
            android:name=".ui.RegisterActivity"
            android:label="注册"/>

        <!--忘记密码页-->
        <activity android:name=".ui.ForgetPasswordActivity"
            android:label="@string/forget_password"/>

        <!--物流查询页-->
        <activity android:name=".ui.CourierActivity"
            android:label="@string/courier_query"/>

        <!--归属地查询页-->
        <activity android:name=".ui.PhoneActivity"
            android:label="@string/phone_number_query"/>

        <!--微信精选详情页面-->
        <activity android:name=".ui.WebViewActivity"/>

    </application>

</manifest>